#:kivy 1.0.0
    
<ListBox>:
    orientation: 'vertical'
    size_hint_y: None
    size_hint_x: 1
    height: self.minimum_height
    width: self.minimum_width

<ListItem>:
	checkbox:cb
	label:lb
    size_hint_y: None
    size_hint_x: 1
    height: sp(40)
    color_normal: (.4,.4,.4,1)
    color_selected: (.6,.6,.6,1)
    canvas:
        Color:
            rgba: self.color_selected if self.selected else self.color_normal
        Rectangle:
            size: self.size
            pos: 0,0
	BoxLayout:
		orientation: 'horizontal'
	
		CheckBox:
			id:cb
			active: root.data.checked
			on_active: root.checkbox_click(self,self.active)
		Label:
			id:lb
			text: root.data.text	
	